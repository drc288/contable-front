---
interface Props {
    href: string;
    buttonText: string;
}

const { href, buttonText } = Astro.props;
---

<a href={href}>{buttonText}</a>

<style>
    a {
        color: white;
        padding-inline: 35px;
        padding-block: 10px;
        background: #AA9CC1;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        border-radius: 10px;
        justify-content: center;
        width: 240px;
        font-size: 20px;
        transition: background .2s;
        text-align: center;
        &:hover {
            background: #8E7CB3;
        }
    }
</style>
