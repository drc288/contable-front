<section>
    <div class="landing">
        <form>
            <div>
                <h1>Registrate</h1>
            </div>
            <header>
                <label>
                    <input type="text" placeholder="Nombre usuario" />
                </label>
                <label>
                    <input type="email" placeholder="Correo electronico" />
                </label>
                <label>
                    <input type="password" placeholder="contraseña" />
                </label>
                <label>
                    <input type="password" placeholder="Validar contraseña" />
                </label>
            </header>
            <footer>
                <a href="/auth/login">¿Ya tienes una cuenta?</a>
                <button type="submit">Ingresar</button>
            </footer>
        </form>
    </div>
</section>

<style>
    section {
        width: 100%;
        height: 747px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-inline: 20rem;
    }
    .landing {
        width: 100%;
        height: 747px;
        background-color: white;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        border-radius: 30px;
        border: 1px rgba(126, 106, 151, 0.50) solid;
        align-items: center;
        padding-inline: 5rem;
        min-width: 530px;
        display: flex;
        @media (max-width: 1120px) {
            height: 700px;
            flex-direction: column;
        }
    }
    form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 25rem;
        width: 100%;
    }
    header {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 2rem;
        height: 10rem;
        width: 100%;
    }
    footer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 2rem;
    }
    label {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
    input {
        width: 700px;
        height: 2rem;
        border: 1px solid rgba(126, 106, 151, 0.50);
        border-radius: 5px;
        padding-inline: 1rem;
        margin-bottom: 1rem;
        @media (max-width: 1400px) {
            width: 25rem;
        }
    }
    a {
        color: #AA9CC1;
        text-decoration: none;
        font-size: 16px;
        padding-bottom: 1rem;
        transition: color .2s;
        font-family: "JetBrains Mono", monospace;
        &:hover{
            color: #8E7CB3;
        }
    }
    button {
        width: 25rem;
        color: white;
        padding-inline: 35px;
        padding-block: 10px;
        background: #AA9CC1;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        border-radius: 10px;
        justify-content: center;
        font-size: 20px;
        transition: background .2s;
        cursor: pointer;
        &:hover {
            background: #8E7CB3;
        }
    }
    div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-bottom: 4rem;
    }
</style>